<h1>Edit Option</h1>

<% form_tag :action => 'update', :id => @option do %>
  <%= render :partial => 'form' %>

	<div class="links_bar">
	  <div class='buttons'>
			<%= form_button('Update') %>
			<%= form_button('Undo', 'reset', 'undo.png') %>
			<%= link_to 'Show', :action => 'show', :id => @option %>
			<%= link_to 'Back', :action => 'list' %>
		</div>
	</div>
<% end %>
